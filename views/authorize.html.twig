<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>OIDC static server</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<div class="container px-4 py-5">
    <h2 class="pb-2 border-bottom">Choisissez qui incarner</h2>
    <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
        {% for user in users %}
            <div class="feature col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ user._title }}</h5>
                        <pre class="card-text">
                              <code>
{{ user.description }}
                              </code>
                            </pre>

                        <form action="/authorize" method="post">
                            <input type="hidden" name="sub" value="{{ user.sub }}">
                            <input type="hidden" name="code" value="{{ code }}">
                            <input type="hidden" name="nonce" value="{{ nonce }}">
                            <input type="hidden" name="scope" value="{{ scope }}">
                            <input type="hidden" name="state" value="{{ state }}">
                            <input type="hidden" name="redirect_uri" value="{{ redirect_uri }}">
                            <input type="hidden" name="response_type" value="{{ response_type }}">
                            <input type="hidden" name="code_challenge" value="{{ code_challenge }}">
                            <input type="hidden" name="code_challenge_method" value="{{ code_challenge_method }}">

                            <button type="submit" class="btn btn-primary float-end">Connecter</button>
                        </form>

                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>
